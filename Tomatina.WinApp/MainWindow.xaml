<mahapps:MetroWindow 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Tomatina.WinApp.MainWindow"
        xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"            
        mc:Ignorable="d" 
        Title="MainWindow">
    <Grid>
        <mahapps:ProgressRing IsActive="{Binding Path=IsActive}"  Foreground="{DynamicResource AccentColorBrush}"/>

        <ContentControl prism:RegionManager.RegionName="ContentRegion" Opacity="{Binding Path=Opacity}" />
    </Grid>
</mahapps:MetroWindow>
